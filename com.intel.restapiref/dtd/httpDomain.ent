<!ENTITY % http-d-ph  "httpRequest 
                      | httpResponse 
                      | httpURL 
                      | httpQuery
                      | httpQueryValue
                      | httpHeader
                      | httpHeaderValue
                      | httpEntity
                      | httpEntityHeaderValue
                      | httpStatusLine
                      "
>


