                            | httpHost
                            | httpPort
                            | httpAbsPath
                            | httpQueryParam
                            | httpHeaderName 
                            | httpEntityHeaderName
                           "
>


<!ENTITY % http-d-text "httpEntityBody" >


<!ENTITY http-d-att "(topic http-d)">

